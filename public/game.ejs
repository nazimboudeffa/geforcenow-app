  <title>My GForce Now App</title>

  <!-- Bootstrap core JavaScript -->
  <link rel="stylesheet" type="text/css" href="../vendor/datatables.min.css" />
  <script type="text/javascript" src="../vendor/datatables.min.js"></script>
  <script src="../vendor/jquery/jquery.min.js"></script>

</head>

<body>

<style media="screen">

  html,
  body {
    height: 100%;
    font-family: geforcenow;
     !important
  }

  li {
    list-style-type: none;
    display: inline;
  }

  .navbar-dark .navbar-brand {
    font-family: 'geforce-bold' !important;
    color: white;
    text-transform: uppercase;
  }

  li.nav-item {
    text-transform: uppercase;
    font-family: geforce-bold;
  }

  td.sorting_1 {
    font-weight: 600;
  }

  .p-5 {
    padding: 0.5rem !important;
  }

  .bg-dark {
    background-color: #76b900 !important;
  }

  thead {
    text-transform: uppercase;
    color: #76b900 !important;
    font-family: geforce-bold;
  }

  tfoot {
    display: table-header-group;
  }

  /* Other Classes for Page Styling */

  @font-face {
    font-family: "geforcenow";
    src: url("../fonts/geforce-light.ttf") format("truetype");
  }

  @font-face {
    font-family: "geforce-bold";
    src: url("../fonts/geforce-bold.ttf") format("truetype");
  }

  .nav-pills .nav-link.active,
  .nav-pills .show>.nav-link {
    color: #fff;
    font-weight: bold;
    margin-left: 5px;
    text-transform: uppercase;
    background-color: #76b900;
  }

  .upcase {
    text-transform: uppercase;
  }

</style>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
    <a class="navbar-brand" href="/">GeForce NOW Games List</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarResponsive">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link" href="#">My Games</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="all">All Games</a>
        </li>
    </div>
  </nav>

<div class="container">
</div>

<script type="text/javascript">

  $(document).ready(function() {
    var gameID = <%= game %>;
    $.getJSON( "../json/"+gameID+".json", function(data) {

      var myGame = data[gameID]['data'];

      $('.container').append("<h1>"+myGame['name']+"</h1>");
      $('.container').append("<div><img src =../images/" + gameID + ".jpg></div>");
      $('.container').append("<div><a href =https://store.steampowered.com/app/" + gameID + ">https://store.steampowered.com/app/" + gameID + "</a></div>");
    })

  });

</script>

</body>

</html>
